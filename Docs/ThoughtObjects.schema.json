{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ThoughtObject",
  "description": "A thought object from the learning board, XR-ready",
  "type": "object",
  "required": ["id", "type", "contentText", "source", "timestampIso"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the thought object"
    },
    "type": {
      "type": "string",
      "enum": ["LearnerAttempt", "TutorHint", "Example", "Question", "Evidence", "Uncertainty", "Reflection"],
      "description": "Type of thought object"
    },
    "contentText": {
      "type": "string",
      "description": "Plain text content (extracted from structured content if needed)"
    },
    "source": {
      "type": "string",
      "enum": ["learner", "tutor", "system"],
      "description": "Source of the thought object"
    },
    "confidence": {
      "type": "string",
      "enum": ["low", "medium", "high", "unknown"],
      "description": "Confidence level (optional)"
    },
    "relatedStepId": {
      "type": "string",
      "description": "ID of related guided path step (optional)"
    },
    "timestampIso": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp"
    },
    "ephemeral": {
      "type": "boolean",
      "description": "Whether this object is ephemeral (optional)"
    }
  }
}








































